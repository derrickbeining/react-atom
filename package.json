{
  "author": {
    "name": "Derrick Beining",
    "url": "https://github.com/derrickbeining"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "description": "Dead simple state management for React, inspired by `reagent` `ratom`s in Cljs",
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/travis-cli": "^7.2.1",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.9",
    "@types/ramda": "^0.25.41",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "@types/react-test-renderer": "^16.0.3",
    "@types/webpack": "^4.4.19",
    "babel-loader": "^8.0.4",
    "codecov": "^3.0.3",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "fork-ts-checker-webpack-plugin": "^0.4.15",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.1",
    "nyc": "^12.0.2",
    "peer-deps-externals-webpack-plugin": "^1.0.4",
    "react": "16.7.0-alpha.2",
    "react-dom": "16.7.0-alpha.2",
    "react-test-renderer": "^16.6.3",
    "react-testing-library": "^5.2.3",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.6.3",
    "source-map-support": "^0.5.6",
    "travis-deploy-once": "^5.0.1",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typedoc-twilio-theme": "^1.0.0",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "files": [
    "dist",
    "src"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "react",
    "hooks",
    "useState",
    "state-management",
    "cljs",
    "atom",
    "reagent"
  ],
  "license": "ISC",
  "main": "dist/react-atom.js",
  "name": "react-atom",
  "nyc": {
    "branches": 99,
    "cache": true,
    "check-coverage": true,
    "exclude": [
      "coverage/**",
      "test/**",
      "test{,-*}.js",
      "**/*.test.js",
      "**/__tests__/**",
      "**/__test__/**",
      "**/node_modules/**",
      "dist/**"
    ],
    "functions": 99,
    "lines": 99,
    "per-file": false,
    "reporter": [
      "text"
    ],
    "statements": 99
  },
  "peerDependencies": {
    "react": ">=16.7.0-alpha",
    "react-dom": ">=16.7.0-alpha"
  },
  "scripts": {
    "build": "export NODE_ENV=production; npm run clean && webpack",
    "build:dev": "npm run clean && webpack",
    "build:docs": "rimraf docs && typedoc --out './docs' --theme node_modules/typedoc-twilio-theme/bin --module commonjs --target ES5 --readme none --name 'React Atom' --mode file --excludeNotExported src",
    "clean": "rimraf dist",
    "commit": "git-cz",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dev": "npm run test -- --watch",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project --fix",
    "test": "jest --env=jsdom",
    "test:withCoverage": "jest --env=jsdom --collectCoverage",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "sideEffects": false,
  "version": "0.0.0-development"
}
